{
  "_comment": "此配置文件示例展示如何配置 RemaLm1000H 主线驱动",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Sorter": {
    "MainLine": {
      "Implementation": "RemaLm1000H"
    }
  },
  "UpstreamSortingApi": {
    "BaseUrl": "http://localhost:5000",
    "TimeoutSeconds": 30
  },
  "MainLineControl": {
    "TargetSpeedMmps": 1500,
    "LoopPeriod": "00:00:00.1",
    "ProportionalGain": 1.0,
    "IntegralGain": 0.1,
    "DerivativeGain": 0.01,
    "StableDeadbandMmps": 10,
    "StableHold": "00:00:02",
    "MinOutputMmps": 0,
    "MaxOutputMmps": 5000,
    "IntegralLimit": 1000
  },
  "RemaLm1000H": {
    "_comment": "雷马 LM1000H 变频驱动器配置参数",
    "LoopPeriod": "00:00:00.060",
    "TorqueMax": 1000,
    "TorqueMaxWhenOverLimit": 650,
    "TorqueMaxWhenOverCurrent": 700,
    "TorqueMaxUnderHighLoad": 800,
    "LimitHz": 25.0,
    "LimitOvershootHz": 0.35,
    "StableDeadbandMmps": 20.0,
    "StableHold": "00:00:01",
    "UnstableThresholdMmps": 80.0,
    "UnstableHold": "00:00:00.800",
    "MicroBandMmps": 20.0,
    "TorqueSlewPerLoop": 18,
    "Pid": {
      "Kp": 0.28,
      "Ki": 0.028,
      "Kd": 0.005
    },
    "PidIntegralClamp": 500.0,
    "PanelBits": 16390,
    "RelayDefine": null,
    "SerialBaud": null,
    "SerialFormat": null,
    "MinMmps": 0.0,
    "MaxMmps": 3000.0,
    "StandardSpeedMmps": 1500.0,
    "RatedCurrentScale": 1.0,
    "FallbackRatedCurrentA": 6.0,
    "CurrentLimitRatio": 1.10,
    "OverCurrentIntegralDecay": 0.6,
    "HighLoadRatio": 0.90,
    "HighLoadHold": "00:00:10",
    "LowSpeedBandMmps": 350.0,
    "FrictionCmd": 68.0,
    "LowSpeedKiBoost": 2.0,
    "StartMoveCmdFloor": 80,
    "_注意事项": [
      "LoopPeriod: 控制循环周期，典型值 60-80ms",
      "LimitHz: 变频器频率上限，根据电机额定频率设置",
      "MinMmps/MaxMmps: 主线速度范围限制",
      "TorqueMax: 扭矩上限（0-1000 = 0-100%额定电流）",
      "Pid: PID 参数需要根据实际系统调试",
      "StableDeadbandMmps: 速度稳定判定死区",
      "详细参数说明请参考 RemaLm1000HOptions.cs"
    ]
  }
}
